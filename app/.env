# Copy this file to `.env` before running `docker compose` or `make up`.
# Never commit your real secrets; this file is only a template.

##########
# PostgreSQL (shared by DB + API containers)
##########
POSTGRES_DB=budgetdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_postgres   # ⚠️ Replace per environment
PGHOST=postgres
PGPORT=5432

##########
# Frontend/backend origins & API URL
##########
CLIENT_ORIGIN=http://localhost:5173      # Used by server CORS + cookies
CLIENT_API_URL=http://localhost:4000     # Injected into client build (no /api suffix)

##########
# Auth/session secrets
##########
JWT_SECRET=change_me_jwt                 # ⚠️ Override with a strong secret
AUTH_COOKIE_SECURE=false                 # true when serving HTTPS

##########
# Upload handling (shared between Compose + API)
##########
UPLOAD_DIR=/uploads
UPLOAD_MAX_BYTES=5242880
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,application/pdf
