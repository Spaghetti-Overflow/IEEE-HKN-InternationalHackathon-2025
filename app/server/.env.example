# Copy this file to `.env` and customize before running the Express API locally.
# Never commit the real `.env` file; these defaults are for development only.

##########
# Server
##########
PORT=4000

##########
# Database connectivity (choose DATABASE_URL or the granular PG* vars)
##########
DATABASE_URL=
PGHOST=postgres
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres # ⚠️ Change in production or when exposing Postgres!
PGDATABASE=budgetdb
PGSSL=false

##########
# Authentication & cookies
##########
JWT_SECRET=dev_secret_change_me # ⚠️ Must be replaced with a strong secret in prod
AUTH_COOKIE_NAME=hkn_budget_token
AUTH_TOKEN_TTL=43200
AUTH_COOKIE_SECURE=false # Set to true when serving over HTTPS

##########
# Two-factor auth
##########
TOTP_ISSUER=Budget HQ

##########
# Client origin / CORS
##########
CLIENT_ORIGIN=http://localhost:5173
CLIENT_ORIGINS=http://localhost:5173

##########
# File uploads
##########
UPLOAD_DIR=./data/uploads
UPLOAD_MAX_BYTES=5242880
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,application/pdf

##########
# Seed defaults
##########
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_DISPLAY_NAME=Chapter Admin
ADMIN_TIMEZONE=America/New_York

##########
# Google OAuth (optional - leave empty if not using)
##########
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
